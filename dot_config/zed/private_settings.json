// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "restore_on_startup": "launchpad",
  "redact_private_values": true,
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },
  "debugger": {
    "dock": "right",
  },
  "colorize_brackets": true,
  "features": {
    "edit_prediction_provider": "copilot",
  },
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5.1-codex",
    },
    "dock": "left",
    "model_parameters": [],
  },
  "git_panel": {
    "tree_view": true,
    "dock": "right",
  },
  "helix_mode": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "vim_mode": false,
  "terminal": {
    "font_size": 13.0,
    "font_family": "JetBrains Mono",
    "line_height": {
      "custom": 1.3,
    },
  },
  "node": {
    "npm_path": "pnpm",
  },
  "project_panel": {
    "dock": "right",
    "hide_gitignore": false,
  },
  "base_keymap": "VSCode",
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false,
    "show": true,
  },
  "sticky_scroll": {
    "enabled": true,
  },
  "minimap": {
    "show": "never",
    "thumb": "always",
  },
  "cursor_shape": "block",
  "autosave": "on_focus_change",
  "buffer_font_fallbacks": [
    "Monaspace Xenon",
    "JetBrains Mono",
    "IBM Plex Mono",
    "Geist Mono",
    "Consolas",
    "Courier New",
    "monospace",
  ],
  "buffer_font_family": "Input Mono Narrow",
  "file_types": {
    "kaz": ["*.kaz"],
    "dotenv": [".env*"],
    "markdown": ["*.mdc", "*.snap.txt"],
    "tailwindcss": ["*.css"],
    "mdx": ["*.mdx"],
    "html": ["*.embeddedhtml"],
    "cpp": [
      "*.idl",
      "array",
      "ios",
      "memory",
      "iostream",
      "algorithm",
      "random",
      "filesystem",
      "__locale",
      "type_traits",
      "__mutex_base",
      "__string",
      "string",
      "string_view",
      "typeinfo",
      "__config",
      "__nullptr",
      "exception",
      "__bit_reference",
      "atomic",
      "utility",
      "sstream",
      "__functional_base",
      "new",
      "__debug",
      "__errc",
      "__hash_table",
      "__node_handle",
      "__split_buffer",
      "__threading_support",
      "__tuple",
      "bit",
      "bitset",
      "cctype",
      "chrono",
      "clocale",
      "cmath",
      "complex",
      "condition_variable",
      "cstdarg",
      "cstddef",
      "cstdint",
      "cstdio",
      "cstdlib",
      "cstring",
      "ctime",
      "cwchar",
      "cwctype",
      "deque",
      "fstream",
      "functional",
      "initializer_list",
      "iomanip",
      "iosfwd",
      "istream",
      "iterator",
      "limits",
      "locale",
      "mutex",
      "optional",
      "ostream",
      "ratio",
      "stack",
      "stdexcept",
      "streambuf",
      "system_error",
      "thread",
      "tuple",
      "unordered_map",
      "unordered_set",
      "vector",
      "__bits",
      "__tree",
      "map",
      "numeric",
      "set",
      "__memory",
      "memory_resource",
    ],
    "jsonc": ["api-extractor.json", "renovate.json"],
  },
  "show_edit_predictions": true,
  "wrap_guides": [80, 120],
  "tab_size": 2,
  "ui_font_size": 16,
  "buffer_font_size": 13.5,
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Ayu Dark",
  },
  "which_key": {
    "delay_ms": 0,
    "enabled": true,
  },
}
